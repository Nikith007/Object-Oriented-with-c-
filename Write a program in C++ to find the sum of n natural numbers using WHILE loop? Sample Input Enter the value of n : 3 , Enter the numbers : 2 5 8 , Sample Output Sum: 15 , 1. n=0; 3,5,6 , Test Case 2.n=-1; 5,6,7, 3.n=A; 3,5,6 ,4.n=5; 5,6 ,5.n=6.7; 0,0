#include <iostream>
using namespace std;

int main() {
    int n;
    int sum = 0;
    int count = 0; 
    
    cout << "Enter the value of n: ";
    cin >> n;
    
    if (n < 0) {
        cout << "Invalid input. n must be a non-negative integer." << endl;
        return 1;
    }
    
    cout << "Enter " << n << " numbers:" << endl;
    while (count < n) {
        int number;
        cin >> number;
        sum += number;
        count++;
    }
    
    cout << "Sum: " << sum << endl;
    
    return 0;
}
